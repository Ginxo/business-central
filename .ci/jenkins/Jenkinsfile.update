        stage('cleanup all containers and images') {
            steps {
                script {
                    cloud.cleanContainersAndImages()
                }
            }
        }
        stage ('build podman images') {
            steps {
                ['base', 'showcase', 'kie-server/base', 'kie-server/showcase', 'server'].forEach{folder ->
                    dir("${WORKSPACE}/${dockerImagesRepo}/${folder}") {
                        script {
                            sh './build.sh'
                        }
                   }
                }
            }
        }
        images.forEach{image -> 
            stage("run ${images}") {
                steps {
                    script{
                      sh "podman run -p 8080:8080 -p 8001:8001 -i -t ${image.id}"
                    }
                }
            }
            stage("execute ${image} test") {
                steps {
                    script{
                        try {
                            def scriptTemplate = readFile("./podman-images-tests/${image.file}")
                            script(scriptTemplate)
                        }
                        catch(e) {
                            failurePodmanImages.add(image.id)
                        }
                    }
                }
            }
            stage("stop ${image}") {
                steps {
                    script{
                      sh 'podman stop $(podman ps -lq)'
                    }
                }
            }
            stage("check errors for ${image}") {
                steps {
                    if(failurePodmanImages.size() > 0) {
                      def errorMessage = "[ERROR] These images ${failurePodmanImages} are in error state. Please check the logs"
                      println errorMessage
                      throw new RuntimeException(errorMessage)
                    } else {
                      println "[INFO] All the images are OK"
                    }
                }
            }
        }
