        }
        stage('upgrade versions') {
            steps {
                dir("${WORKSPACE}/${dockerImagesRepo}") {
                    script {
                        sh "./script/update-version.sh ${C_K_F_V} ${N_K_F_V}"
                    }
                }
            }
        }
        stage('add and commit kie-version'){
            steps{
