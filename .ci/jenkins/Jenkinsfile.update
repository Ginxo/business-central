def failureDockerImages = []
def images = [
        [id: "kiegroup/business-central-workbench", file: "podman-images-tests/business-central.test.script" ],
        [id: "kiegroup/business-central-workbench-showcase", file: "podman-images-tests/business-central-showcase.test.script" ],
        [id: "kiegroup/jbpm-server-full", file: "podman-images-tests/jbpm-server-full.test.script" ],
        [id: "kiegroup/kie-server", file: "docker-podman-tests/kie-server.test.script" ],
        [id: "kiegroup/kie-server-showcase", file: "podman-images-tests/kie-server-showcase.test.script" ]
]

pipeline {
    agent {
        label "$AGENT_LABEL"
    }
    options{
        timestamps()
    }
    tools {
        maven "$mvnTool"
        jdk "$jdkTool"
    }
    stages {
        stage('CleanWorkspace') {
            steps {
                cleanWs()
            }
        }
        stage('clone business-central') {
            steps {
                script {
                    checkoutDockerImagesRepo()
                }
            }
        }
        /*stage('create branch for PR'){
